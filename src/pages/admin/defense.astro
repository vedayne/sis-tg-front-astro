    // Actualizar paginación
    function updatePagination() {
        const totalPages = Math.ceil(filteredData.length / perPage);
        const start = (currentPage - 1) * perPage + 1;
        const end = Math.min(currentPage * perPage, filteredData.length);

        document.getElementById('showingFrom').textContent = filteredData.length > 0 ? start : 0;
        document.getElementById('showingTo').textContent = end;
        document.getElementById('totalResults').textContent = filteredData.length;

        // Generar números de página
        const paginationNumbers = document.getElementById('paginationNumbers');
        let pagesHTML = '';

        for (let i = 1; i <= totalPages; i++) {
            if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) {
                pagesHTML += `
                    <button onclick="goToPage(${i})" class="w-10 h-10 rounded-lg border border-navy-200 text-slate-700 hover:bg-navy-100 hover:border-gold-400 transition-all duration-300 ${currentPage === i ? 'pagination-active border-gold-400' : ''}">
                        ${i}
                    </button>
                `;
            } else if (i === currentPage - 2 || i === currentPage + 2) {
                pagesHTML += `<span class="px-2 text-slate-400">...</span>`;
            }
        }

        paginationNumbers.innerHTML = pagesHTML;

        // Habilitar/deshabilitar botones prev/next
        document.getElementById('prevPage').disabled = currentPage === 1;
        document.getElementById('nextPage').disabled = currentPage === totalPages || totalPages === 0;
    }

    // Filtrar datos
    function filterData() {
        const searchTerm = searchInput.value.toLowerCase();
        const statusFilter = filterStatus.value;
        const yearFilter = filterYear.value;

        filteredData = data.filter(item => {
            const matchesSearch = item.titulo.toLowerCase().includes(searchTerm) ||
                                 item.autor.toLowerCase().includes(searchTerm) ||
                                 item.tutor.toLowerCase().includes(searchTerm) ||
                                 item.codigo.toLowerCase().includes(searchTerm);
            const matchesStatus = !statusFilter || item.estado === statusFilter;
            const matchesYear = !yearFilter || item.gestion === yearFilter;

            return matchesSearch && matchesStatus && matchesYear;
        });

        currentPage = 1;
        renderTable();
        updateActiveFilters();
    }

    // Actualizar filtros activos
    function updateActiveFilters() {
        const container = document.getElementById('activeFilters');
        const filters = [];

        if (searchInput.value) {
            filters.push({ type: 'search', label: `Búsqueda: "${searchInput.value}"`, clear: () => { searchInput.value = ''; filterData(); } });
        }
        if (filterStatus.value) {
            const labels = { 'en-progreso': 'En Progreso', 'aprobado': 'Aprobado', 'pendiente': 'Pendiente', 'rechazado': 'Rechazado' };
            filters.push({ type: 'status', label: `Estado: ${labels[filterStatus.value]}`, clear: () => { filterStatus.value = ''; filterData(); } });
        }
        if (filterYear.value) {
            filters.push({ type: 'year', label: `Gestión: ${filterYear.value}`, clear: () => { filterYear.value = ''; filterData(); } });
        }

        if (filters.length > 0) {
            container.classList.remove('hidden');
            container.innerHTML = filters.map(f => `
                <span class="inline-flex items-center gap-1 px-3 py-1 bg-navy-100 text-navy-800 rounded-full text-sm">
                    ${f.label}
                    <button onclick="this.parentElement.querySelector('button').dataset.type === '${f.type}' && clearFilter('${f.type}')" class="hover:text-red-500 transition-colors" data-type="${f.type}">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </span>
            `).join('') + `
                <button onclick="clearAllFilters()" class="text-sm text-red-500 hover:text-red-700 transition-colors font-medium">
                    Limpiar todos
                </button>
            `;
        } else {
            container.classList.add('hidden');
        }
    }

    function clearFilter(type) {
        if (type === 'search') searchInput.value = '';
        if (type === 'status') filterStatus.value = '';
        if (type === 'year') filterYear.value = '';
        filterData();
    }

    function clearAllFilters() {
        searchInput.value = '';
        filterStatus.value = '';
        filterYear.value = '';
        filterData();
    }

    // Navegación de páginas
    function goToPage(page) {
        currentPage = page;
        renderTable();
    }

    document.getElementById('prevPage').addEventListener('click', () => {
        if (currentPage > 1) {
            currentPage--;
            renderTable();
        }
    });

    document.getElementById('nextPage').addEventListener('click', () => {
        const totalPages = Math.ceil(filteredData.length / perPage);
        if (currentPage < totalPages) {
            currentPage++;
            renderTable();
        }
    });

    // Ver detalles
    function viewDetails(index) {
